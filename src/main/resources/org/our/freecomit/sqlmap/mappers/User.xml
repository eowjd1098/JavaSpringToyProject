<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.our.freecommit.user.dao.UserRepository" >

    <sql id="userSelect">
        SELECT OBJECT_ID
        ,USER_NAME
        ,USER_ID
        ,USER_ADD
        ,USER_PHONE
        FROM USER_OBJECT
    </sql>

    <select id="find">
        <include refid="userSelect" />
        WHERE USER_NAME LIKE '%'||#{userName, jdbcType=VARCHAR}||'%'
        AND USER_ADD = #{address, jdbcType=VARCHAR}
    </select>

    <select id="findByName">
        <include refid="userSelect" />
        WHERE USER_NAME LIKE '%'||#{userName, jdbcType=VARCHAR}||'%'
    </select>

    <select id="findByAdd">
        <include refid="userSelect" />
        WHERE USER_ADD = #{param1, jdbcType=VARCHAR}
    </select>

</mapper>